<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Version>0.6.1</Version>
    <Authors>Brad Irby</Authors>
    <Description>Minimalist implementation of a .NET Standard library for custom Alexa Skills</Description>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageProjectUrl>https://alexanetcore.com</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/bradirby/AlexaNetCore</RepositoryUrl>
    <PackageTags>Alexa AWS Lambda Net Core</PackageTags>
    <PackageReleaseNotes>Convert to .Net Standard 2.0</PackageReleaseNotes>
	  <LangVersion>8.0</LangVersion>
	  <PackageLicenseExpression> MIT</PackageLicenseExpression>
	  <AssemblyVersion>0.6.1</AssemblyVersion>
	  <FileVersion>0.6.1</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Model\AlexaAttribute.cs" />
    <Compile Remove="Model\AlexaLaunchRequest.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Amazon.Lambda.Core" Version="2.1.0" />
    <PackageReference Include="AWSSDK.Translate" Version="3.7.100.16" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="7.0.0" />
    <PackageReference Include="System.Text.Json" Version="7.0.0" />
  </ItemGroup>

</Project>
